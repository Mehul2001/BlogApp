<%include ./partials/header.ejs%>
    <div class="ui main text container">
        <div class="ui huge header">Payment Options</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){%>
                    <div class="container main item">
                        <div class="image">
                            <img src="<%=blog.image%>">
                        </div>
                        <div class="content">
                            <a href="/blogs/<%=blog._id%>" class="header"><%= blog.title%></a>
                            <div class="meta">
                                <span><%=blog.created.toDateString() %></span>
                            </div>
                            <div class="description">
                                <%-blog.body.substring(0,100)%>...
                            </div>
                            <div class="extras">
                                <a class="ui floated basic red button" href="/blogs/<%=blog._id%>">Read more <i class="right chevron icon"></i></a>
                            </div>
                        </div>
                    </div>
                    <% })%>
            </div>
        </div>
    </div>
    <%include ./partials/footer.ejs%>